    "attribution_guidelines": {
      "human_centric_principle": "AI systems are tools used by humans; attribution goes to the responsible human contributors",
      "transparency_requirement": "Clear distinction between human-authored and AI-assisted contributions",
      "validation_emphasis": "Document how AI outputs were validated by human experts",
      "tool_specificity": "Name specific AI tools and versions used",
      "confidence_levels": "Provide confidence estimates for AI-assisted work",
      "role_mapping": {
        "standard_credit_roles": "Use for human intellectual contributions",
        "ai_curation": "For selection, configuration, and deployment of AI systems",
        "ai_oversight": "For validation, bias mitigation, and responsible AI practices",
        "ai_integration": "For incorporating AI into research workflows"
      }
